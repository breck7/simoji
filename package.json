{
  "name": "simoji",
  "version": "2.0.0",
  "description": "Design your own simulations using Emojis",
  "main": "Simoji.js",
  "directories": {
    "example": "examples"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "semi": false,
    "printWidth": 120,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "bin": {
    "simoji": "./cli.js"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "jquery": "^3.6.0",
    "jtree": "^74.0.0",
    "lodash": "^4.17.21",
    "mathjs": "^9.4.4",
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "tap": "^15.0.9"
  },
  "scripts": {
    "build": "./build.js",
    "buildCoverageReport": "tap testAll.js",
    "buildCoverageHtmlReport": "tap testAll.js --coverage-report=lcov",
    "local": "./server.js",
    "test": "node testAll.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breck7/simoji.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/breck7/simoji/issues"
  },
  "homepage": "https://github.com/breck7/simoji#readme"
}
